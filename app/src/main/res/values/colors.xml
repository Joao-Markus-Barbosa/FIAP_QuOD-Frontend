<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Antifraude" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Fundo da tela -->
        <item name="android:windowBackground">#121212</item>
        <item name="android:colorBackground">#121212</item>

        <!-- Cores de botões e textos -->
        <item name="colorPrimary">#008c3a</item>
        <item name="colorPrimaryVariant">#005c2a</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>

        <!-- Desativa barra superior -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Modo escuro forçado -->
        <item name="android:forceDarkAllowed">false</item>
    </style>
</resources>
